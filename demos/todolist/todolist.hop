(let loop ((items (iota 1024)))
   (<HTML>
    (<HEAD>)
    (<BODY>
     (<H1> "To do list " (symbol->string (gensym)))
     (<FORM> :action (service (new) (loop (cons new items)))
	     (<INPUT> :name "new" :type "text" :size 40)
	     (<INPUT> :type "submit" :value "add new item"))
     (<TABLE>
      (map (lambda (item)
	      (<TR>
	       (<TD> item)
	       (<TD> (<FORM> :action (service () (loop (delete! item items)))
			     (<INPUT> :type "submit" :value "remove")))))
	   items)))))
