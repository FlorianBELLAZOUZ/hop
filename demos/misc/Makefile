#*    The Makefile for the HOP demos/misc directory                    */
#*=====================================================================*/

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
include ../../etc/Makefile.hopconfig
include ../../etc/Makefile.version

#*---------------------------------------------------------------------*/
#*    POPDIRS                                                          */
#*---------------------------------------------------------------------*/
POPDIRS=  calendar dhtml event hss text wadler

#*---------------------------------------------------------------------*/
#*    install                                                          */
#*---------------------------------------------------------------------*/
install:
	for d in $(POPDIRS) ;do \
	  $(MAKE) -C $$d install CATEGORY=$(CATEGORY) DEMO=$$d ; \
	done
