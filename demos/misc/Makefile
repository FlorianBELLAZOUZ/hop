#*    -------------------------------------------------------------    */
#*    The Makefile for the HOP demos/misc directory                    */
#*=====================================================================*/

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
include ../../etc/Makefile.hopconfig
include ../../etc/Makefile.version

DEMOSDIR=$(HOPSHAREDIR)/demos/misc

#*---------------------------------------------------------------------*/
#*    POPDIRS                                                          */
#*---------------------------------------------------------------------*/
POPDIRS = event

#*---------------------------------------------------------------------*/
#*    install                                                          */
#*---------------------------------------------------------------------*/
install:
	for d in $(POPDIRS) ;do \
	  mkdir -p $(DEMOSDIR)/$$d; \
	  $(MAKE) -C $$d install; \
	done


