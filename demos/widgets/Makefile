#*    -------------------------------------------------------------    */
#*    The Makefile for the HOP demos/widgets directory                 */
#*=====================================================================*/

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
include ../../etc/Makefile.hopconfig
include ../../etc/Makefile.version

DEMOSDIR=$(HOPSHAREDIR)/demos/widgets

#*---------------------------------------------------------------------*/
#*    POPDIRS                                                          */
#*---------------------------------------------------------------------*/
POPDIRS= notepad paned slider tabslider tree

#*---------------------------------------------------------------------*/
#*    install                                                          */
#*---------------------------------------------------------------------*/
install:
	for d in $(POPDIRS) ;do \
	  mkdir -p $(DEMOSDIR)/$$d; \
	  $(MAKE) -C $$d install; \
	done
