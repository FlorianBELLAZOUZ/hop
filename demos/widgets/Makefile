#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
include ../../etc/Makefile.hopconfig
include ../../etc/Makefile.version

#*---------------------------------------------------------------------*/
#*    POPDIRS                                                          */
#*---------------------------------------------------------------------*/
POPDIRS= notepad paned slider sorttable tabslider tree

#*---------------------------------------------------------------------*/
#*    install                                                          */
#*---------------------------------------------------------------------*/
install:
	for d in $(POPDIRS) ;do \
	  $(MAKE) -C $$d install CATEGORY=$(CATEGORY) DEMO=$$d ; \
	done
