#*    Creation    :  Wed Mar  1 14:25:06 2006                          */
#*    Last change :  Thu Mar  2 14:26:24 2006 (eg)                     */
#*    -------------------------------------------------------------    */
#*    The Makefile for the HOP demos directory                         */
#*=====================================================================*/

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
include ../etc/Makefile.hopconfig
include ../etc/Makefile.version

DEMOSDIR=$(HOPSHAREDIR)/demos

#*---------------------------------------------------------------------*/
#*    SUBDIRS                                                          */
#*---------------------------------------------------------------------*/
SUBDIRS = weblets misc


#*---------------------------------------------------------------------*/
#*    install                                                          */
#*---------------------------------------------------------------------*/
install:
	for d in $(SUBDIRS) ;do \
          (cd $$d; $(MAKE) install) \
	done

#*---------------------------------------------------------------------*/
#*    uninstall                                                        */
#*---------------------------------------------------------------------*/
uninstall:
	/bin/rm -rf $(DEMOSDIR)

