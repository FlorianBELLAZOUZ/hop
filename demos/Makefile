#*=====================================================================*/
#*    serrano/prgm/project/hop/demos/Makefile                          */
#*    -------------------------------------------------------------    */
#*    Author      :  Erick Gallesio                                    */
#*    Creation    :  Wed Mar  1 14:25:06 2006                          */
#*    Last change :  Fri Mar  3 15:54:50 2006 (eg)                     */
#*    -------------------------------------------------------------    */
#*    The Makefile for the HOP demos directory                         */
#*=====================================================================*/

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
include ../etc/Makefile.hopconfig
include ../etc/Makefile.version

DEMOSDIR=$(HOPSHAREDIR)/demos

#*---------------------------------------------------------------------*/
#*    POPDIRS                                                          */
#*---------------------------------------------------------------------*/
POPDIRS = widgets misc

#*---------------------------------------------------------------------*/
#*    POPULATION                                                       */
#*---------------------------------------------------------------------*/
POPULATION	= Makefile

#*---------------------------------------------------------------------*/
#*    install                                                          */
#*---------------------------------------------------------------------*/
install:
	for d in $(POPDIRS) ;do \
          (cd $$d; $(MAKE) install) \
	done

#*---------------------------------------------------------------------*/
#*    uninstall                                                        */
#*---------------------------------------------------------------------*/
uninstall:
	/bin/rm -rf $(DEMOSDIR)

