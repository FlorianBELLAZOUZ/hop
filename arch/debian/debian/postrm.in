#*    Remove the HOP desktop entries from the configuration files      */
#*=====================================================================*/

if [ "@DEBIAN@ " = "maemo " ]; then
  path="/etc/hildon-desktop"
  conf=home.conf
  home_data="hop.desktop"

  sed "/$home_data/d" $path/$conf > home_conf.tmp
  mv home_conf.tmp $path/$conf
fi
