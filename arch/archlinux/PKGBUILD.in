pkgname=hop
pkgver=@VERSION@
pkgrel=1
pkgdesc="a Software Development Kit for the Web"
url='http://hop.inria.fr'
license=('GPL' 'LGPL')
arch=('i686' 'x86_64' 'arm')
depends=('bigloo>=@BGLVERSION@')
makedepends=('bigloo>=@BGLVERSION@')
install=hop.install
source=(ftp://ftp-sop.inria.fr/indes/fp/Hop/$pkgname-$pkgver.tar.gz)
md5sums=('@MD5SUM@')
backup=('etc/conf.d/hop')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --etcdir=/etc/hop
  make || return 1
}

package() {
  cd $startdir/src/$pkgname-$pkgver
  make DESTDIR=$startdir/pkg install

  mkdir -p $startdir/pkg/etc/conf.d
  cp $startdir/src/$pkgname-$pkgver/arch/archlinux/conf.d/hop.in $startdir/pkg/etc/conf.d/hop

  mkdir -p $startdir/pkg/etc/rc.d
  cp $startdir/src/$pkgname-$pkgver/arch/archlinux/rc.d/hop.in $startdir/pkg/etc/rc.d/hop
  chmod a+rx $startdir/pkg/etc/rc.d/hop

  mkdir -p $startdir/pkg/usr/lib/systemd/system
  cp $startdir/src/$pkgname-$pkgver/arch/archlinux/systemd/hop.service.in $startdir/pkg/usr/lib/systemd/system/hop.service
  cp $startdir/src/$pkgname-$pkgver/arch/archlinux/systemd/hop.socket.in $startdir/pkg/usr/lib/systemd/system/hop.socket
  chmod a+r $startdir/pkg/usr/lib/systemd/system/hop.service
  chmod a+r $startdir/pkg/usr/lib/systemd/system/hop.socket

  mkdir -p $startdir/pkg/usr/sbin
  cp $startdir/src/$pkgname-$pkgver/arch/archlinux/sbin/hop $startdir/pkg/usr/sbin/hop
  chmod a+rx $startdir/pkg/usr/sbin/hop
}
