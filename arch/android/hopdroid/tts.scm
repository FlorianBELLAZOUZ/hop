;*---------------------------------------------------------------------*/
;*    The module                                                       */
;*---------------------------------------------------------------------*/
(module __hopdroid-tts

   (library multimedia phone hop)

   (import __hopdroid-phone))

;*---------------------------------------------------------------------*/
;*    Standard plugins                                                 */
;*---------------------------------------------------------------------*/
(define tts-plugin #f)

;*---------------------------------------------------------------------*/
;*    tts-init ::androidtts ...                                        */
;*---------------------------------------------------------------------*/
(define (tts-init)
   (unless tts-plugin
      (set! tts-plugin (android-load-plugin (androidtts-phone o) "tts"))))

;*---------------------------------------------------------------------*/
;*    speak ...                                                        */
;*---------------------------------------------------------------------*/
(define (speak o::android text)
   (tts-init)
   (android-send-command p tts-plugin #\s text))

