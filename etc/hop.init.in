;*---------------------------------------------------------------------*/
;*    The additional libraries                                         */
;*---------------------------------------------------------------------*/
(set! *additional-bigloo-libraries*
      (cons* 'bigloomultimedia
	     'biglooweb
	     'bigloopth
	     *additional-bigloo-libraries*))

;*---------------------------------------------------------------------*/
;*    The basename of the HOP library name                             */
;*---------------------------------------------------------------------*/
(library-translation-table-add! 'hop "hop" "@VERSION@")

;*---------------------------------------------------------------------*/
;*    Link option                                                      */
;*---------------------------------------------------------------------*/
(cond-expand
   (bigloo-compile
    #unspecified)
   (bigloo-eval
    #unspecified))
