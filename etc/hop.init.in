;*---------------------------------------------------------------------*/
;*    The library                                                      */
;*---------------------------------------------------------------------*/
(declare-library! 'hop
   :version "@VERSION@"
   :srfi '(hop)
   :module-init '__hop_types
   :module-eval '__hop_makelib
   :class-init "bigloo.hop.types"
   :class-eval "bigloo.hop.make_lib")

;*---------------------------------------------------------------------*/
;*    Link option                                                      */
;*---------------------------------------------------------------------*/
(cond-expand
   (bigloo-compile
    ;; required libraries for HOP
    (for-each use-library! '(@BIGLOOCLOSELIBS@)))
   (bigloo-eval
    #unspecified))
