include $(BUILDETCDIR)/Makefile.mercurial

#*---------------------------------------------------------------------*/
#*    Global control                                                   */
#*---------------------------------------------------------------------*/
POPDIR=.
POPDIRS=
DESTDIR=$(HOPTMPDIR)/hop

#*---------------------------------------------------------------------*/
#*    pop                                                              */
#*---------------------------------------------------------------------*/
.PHONY: pop

pop:
	@ echo $(POPULATION:%=$(POPDIR)/%)
	@ for d in $(POPDIRS); do \
             (cd $$d; $(MAKE) -s pop POPDIR=$(POPDIR)/$$d ); \
          done

#*---------------------------------------------------------------------*/
#*    populate                                                         */
#*---------------------------------------------------------------------*/
.PHONY: populate commit revision

populate:
	$(VM-POPULATE) `$(MAKE) -s pop`

commit:
	$(VM-COMMIT)

push:
	$(VM-PUSH) $(HOPREPOSITORY)

pull:
	$(VM-PULL) $(HOPREPOSITORY)

tag:
	$(VM-TAG) "v$(HOPRELEASE)"

revision: populate commit

clone:
	$(VM-CLONE) . $(DESTDIR)
