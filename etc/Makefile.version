-include $(BUILDETCDIR)/Makefile.mercurial

#*---------------------------------------------------------------------*/
#*    Global control                                                   */
#*---------------------------------------------------------------------*/
POPDIR=.
POPDIRS=
CLONEDIR=$(HOPTMPDIR)/hop

#*---------------------------------------------------------------------*/
#*    pop                                                              */
#*---------------------------------------------------------------------*/
.PHONY: pop

pop:
	@ echo $(POPULATION:%=$(POPDIR)/%)
	@ for d in $(POPDIRS); do \
             (cd $$d; $(MAKE) -s pop POPDIR=$(POPDIR)/$$d ); \
          done

#*---------------------------------------------------------------------*/
#*    populate                                                         */
#*---------------------------------------------------------------------*/
.PHONY: populate commit revision log

populate:
	find . -name '*~' -exec /bin/rm {} \;
	$(VM-POPULATE) `$(MAKE) -s pop`

commit:
	if [ "$(LOGMSG) " != " " ]; then \
           $(VM-COMMIT) $(OPT) -m "$(LOGMSG)"; \
        else \
           $(VM-COMMIT) $(OPT); \
        fi

push:
	if [ "$(HOPBRANCH) " != " " ]; then \
	  $(VM-PUSH) $(VM-PUSH-BRANCH) $(HOPBRANCH) $(HOPSVN); \
        else \
	  $(VM-PUSH) $(HOPSVN); \
        fi

pull:
	$(VM-PULL) $(HOPSVN)

tag:
	$(VM-TAG) "v$(HOPRELEASE)"

revision: populate commit

clone:
	$(VM-CLONE) . $(CLONEDIR)
	if [ "$(HOPBRANCH) " != " " ]; then \
          (cd $(CLONEDIR) && $(VM-BRANCH) $(HOPBRANCH)) \
        fi

log:
	@ $(VM-LOG)
