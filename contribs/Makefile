#*    -------------------------------------------------------------    */
#*    The Makefile for the HOP contribs directory                      */
#*=====================================================================*/

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
include ../etc/Makefile.hopconfig

#*---------------------------------------------------------------------*/
#*    contribs                                                         */
#*---------------------------------------------------------------------*/
CONTRIBS	= jsMath

#*---------------------------------------------------------------------*/
#*    Population                                                       */
#*---------------------------------------------------------------------*/
POPULATION	= Makefile $(CONTRIBS)
		  

#*---------------------------------------------------------------------*/
#*    pop ...                                                          */
#*---------------------------------------------------------------------*/
pop:
	@ echo $(POPULATION:%=contribs/%)

#*---------------------------------------------------------------------*/
#*    install                                                          */
#*---------------------------------------------------------------------*/
install:
	for p in $(CONTRIBS); do \
           (cd $$p && $(MAKE) install); \
        done

#*---------------------------------------------------------------------*/
#*    uninstall                                                        */
#*---------------------------------------------------------------------*/
uninstall:
	/bin/rm -f $(SHAREDIR)/contribs

