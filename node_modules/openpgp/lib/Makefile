#*=====================================================================*/
#*    serrano/prgm/project/hop/hop/node_modules/openpgp/lib/Makefile   */
#*    -------------------------------------------------------------    */
#*    Author      :  Manuel Serrano                                    */
#*    Creation    :  Fri Aug 28 10:00:50 2015                          */
#*    Last change :  Wed Apr 15 11:30:41 2020 (serrano)                */
#*    Copyright   :  2015-21 Manuel Serrano                            */
#*    -------------------------------------------------------------    */
#*    openpgp precompilation                                           */
#*=====================================================================*/
do: build

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
PACKAGE=openpgp
include ../../Makefile.modules

#*---------------------------------------------------------------------*/
#*    The entries                                                      */
#*---------------------------------------------------------------------*/
.PHONY: build install uninstall openpgp _openpgp

build: .afile o
	$(MAKE) o/openpgp.$(SHAREDSUFFIX) \
            TARGETNAME=openpgp \
            OBJECTS=o/openpgp.o
	$(MAKE) o/_openpgp.$(SHAREDSUFFIX) \
            TARGETNAME=_openpgp \
            OBJECTS="o/_openpgp.o"

install:
	$(MAKE) mkdir DIR=$(DESTDIR)$(HOPLIBDIR)/$(LIBSDIR)
	$(MAKE) install-module TARGETNAME=openpgp
	$(MAKE) install-module TARGETNAME=_openpgp
	$(RM) -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/lib/o
	chmod -R $(MODDIR) $(DESTDIR)$(HOPLIBDIR)/$(LIBSDIR)

install-module:
	$(MAKE) install-shared-lib \
                INSTALL="$(INSTALL)" \
                BOOTLIBDIR=$(BUILDDIR)/$(DIR)/o \
                FILDIR=$(LIBSDIR) \
                LIBDIR=$(HOPLIBDIR) \
                LIB=$(TARGETNAME)
	chmod -R $(MODDIR) $(DESTDIR)$(HOPLIBDIR)/hop/$(HOPRELEASE)/$(DIR)
	cp -r ../../$(PACKAGE) $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules
	touch $(DESTDIR)$(HOPLIBDIR)/$(LIBSDIR)/$(TARGETNAME).$(SHAREDSUFFIX)
	chmod $(MODEXE) $(DESTDIR)$(HOPLIBDIR)/$(LIBSDIR)/$(TARGETNAME).$(SHAREDSUFFIX)

uninstall:
	$(MAKE) uninstall-module TARGETNAME=_openpgp
	$(MAKE) uninstall-module TARGETNAME=openpgp

uninstall-module:
	$(MAKE) uninstall-shared-lib LIB=$(TARGETNAME).$(SHAREDSUFFIX)

#*---------------------------------------------------------------------*/
#*    lib                                                              */
#*---------------------------------------------------------------------*/
o:
	mkdir o

openpgp: o
	$(MAKE) o/$(TARGETNAME).$(SHAREDSUFFIX)

_openpgp: o
	$(MAKE) o/$(TARGETNAME).$(SHAREDSUFFIX)

o/$(TARGETNAME).$(SHAREDSUFFIX): $(OBJECTS)
	$(MAKE) shared-lib \
             LDINSTALLNAMEDIR=$(DESTDIR)$(HOPLIBDIR)/$(LIBSDIR) \
             BOOTLIBDIR=$(BUILDDIR)/$(DIR)/o \
             FORCELD=true \
             LIBDEST=$@ \
             SONAME=$(TARGETNAME).$(SHAREDSUFFIX) \
             LDOPTS="-L$(BUILDLIBDIR) -L$(BIGLOOLIBDIR) $(LDOPTS)" \
             HOPBIGLOOEXTRALIBS="$(HOPBIGLOOEXTRALIBS) bigloomail"

#*---------------------------------------------------------------------*/
#*    .afile                                                           */
#*---------------------------------------------------------------------*/
.afile: _openpgp.hop
	(cd $(dir $@) && $(AFILE) -suffix hop $(notdir $^) -o $(notdir $@))

#*---------------------------------------------------------------------*/
#*    clean                                                            */
#*---------------------------------------------------------------------*/
clean:
	$(RM) -rf o

devclean:
	$(RM) -f .afile

distclean: devclean

#*---------------------------------------------------------------------*/
#*    Suffixes                                                         */
#*---------------------------------------------------------------------*/
.SUFFIXES:
.SUFFIXES: .scm .o .hop .js

#*---------------------------------------------------------------------*/
#*    explicit rules                                                   */
#*---------------------------------------------------------------------*/
o/_openpgp.o: _openpgp.hop
	@ $(call compile3,$(HOPC),$(HFLAGS),$(BCFLAGSMODULES) $(BCFLAGS) -dload-sym,$(BLFLAGS),-c,$< -o $@)

#*---------------------------------------------------------------------*/
#*    The implicit rules                                               */
#*---------------------------------------------------------------------*/
o/%.o: %.scm
	@ $(call compile2,$(BIGLOO),$(BCFLAGSMODULES) $(BCFLAGS),$(BLFLAGS),-c,$< -o $@)

o/%.o: %.hop
	@ $(call compile3,$(HOPC),$(HFLAGS),$(BCFLAGSMODULES) $(BCFLAGS),$(BLFLAGS),-c,$< -o $@)

%.scm: %.hop
	@ $(call compile3,$(HOPC),$(HFLAGS),$(BCFLAGSMODULES) $(BCFLAGS),$(BLFLAGS),-s,$< -o $@)

o/%.o: %.js
	@ $(call compile3,$(HOPC),$(HFLAGS),$(BCFLAGSMODULES) $(BCFLAGS) -dload-sym,$(BLFLAGS),$(BHOPCFLAGS) -c --js-no-module-main --js-module-name __nodejs_$* --js-module-path $*,$< -o $@)

