#*    -------------------------------------------------------------    */
#*    readlines precompilation                                         */
#*=====================================================================*/
do: build

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
PACKAGE=readlines
SCOPE=@hop
BIGLOOEXTRAAPPLIBS=

include ../../Makefile.modules
include ../../Makefile.scoped

#*---------------------------------------------------------------------*/
#*    The entries                                                      */
#*---------------------------------------------------------------------*/
.PHONY: build install uninstall hop _hop config

build: o
	$(MAKE) o/readlines.$(SHAREDSUFFIX) TARGETNAME=readlines OBJECTS=o/readlines.o
	$(MAKE) o/_readlines.$(SHAREDSUFFIX) TARGETNAME=_readlines OBJECTS=o/_readlines.o

npm: clean

install: mkdirs
	$(MAKE) install-so TARGETNAME=readlines
	$(MAKE) install-so TARGETNAME=_readlines
	$(RM) -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/hop/o
	$(INSTALL) readlines.mjs $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/readlines.mjs
	$(INSTALL) _readlines.hop $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/_readlines.hop
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
	$(INSTALL) ../type/$(PACKAGE).d.ts $(INSTALLDIR)/type && chmod $(MODFILE) $(INSTALLDIR)/type/$(PACKAGE).d.ts

