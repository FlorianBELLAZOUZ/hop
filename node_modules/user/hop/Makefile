do: build

#*---------------------------------------------------------------------*/
#*    Useruration                                                      */
#*---------------------------------------------------------------------*/
PACKAGE=user
SCOPE=@hop
BIGLOOEXTRAAPPLIBS=

include ../../Makefile.modules
include ../../Makefile.scoped

#*---------------------------------------------------------------------*/
#*    The entries                                                      */
#*---------------------------------------------------------------------*/
.PHONY: build install uninstall hop _hop user

build: o
	$(MAKE) o/user.$(SHAREDSUFFIX) TARGETNAME=user OBJECTS=o/user.o
	$(MAKE) o/_user.$(SHAREDSUFFIX) TARGETNAME=_user OBJECTS=o/_user.o

npm: clean

install: mkdirs
	$(MAKE) install-so TARGETNAME=user
	$(MAKE) install-so TARGETNAME=_user
	$(RM) -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/hop/o
	$(INSTALL) user.mjs $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/user.mjs
	$(INSTALL) _user.hop $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/_user.hop
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
	$(INSTALL) ../type/$(PACKAGE).d.ts $(INSTALLDIR)/type && chmod $(MODFILE) $(INSTALLDIR)/type/$(PACKAGE).d.ts
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
