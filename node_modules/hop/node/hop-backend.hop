;*---------------------------------------------------------------------*/
;*    The module                                                       */
;*---------------------------------------------------------------------*/
(module _hop-backend
   
   (static (class Receiver
	      (url::bstring read-only)
	      (get (default #f))
	      (put (default #f))
	      (post (default #f))))

   (static (class Directory
	      (path::bstring read-only)
	      (alias::bstring read-only)))

   (static (class JsHeaderWrapper
	      (obj::pair read-only)))

   (library hopscript hop hopwidget nodejs web)
   
   (export (hopscript %this this %scope %module)))

;*---------------------------------------------------------------------*/
;*    hopscript ...                                                    */
;*    -------------------------------------------------------------    */
;*    This is the function called by JavaScript when the Hop module    */
;*    is required. It binds the exports field of the newly             */
;*    allocated module                                                 */
;*---------------------------------------------------------------------*/
(define (hopscript %this this %scope %module)

   ;; pre-allocated these strings because we will need them in a
   ;; non-JavaScript thread
   (define &GET (& "GET"))
   (define &PUT (& "PUT"))
   (define &POST (& "POST"))
   (define &header (& "header"))
   
   (define receiver-table
      (create-hashtable
	 :weak 'open-string
	 :size 128))

   (define %worker
      (with-access::JsGlobalObject %this (worker)
	 worker))
   
   (define (receiver-handler handler)
      (cond
	 ((isa? handler JsProcedure)
	  (with-access::JsProcedure handler (arity procedure)
	     (if (=fx arity 3)
		 (lambda (this req res)
		    (js-worker-exec %worker "hop"
		       (lambda (%this)
			  (procedure this req res))))
		 (lambda (this req res)
		    (js-worker-exec %worker "hop"
		       (lambda (%this)
			  (js-call2-procedure procedure (js-undefined) req res)))))))
	 ((isa? handler JsFunction)
	  (lambda (this req res)
	     (js-worker-exec %worker "hop"
		(lambda (%this)
		   (js-call2 %this handler (js-undefined) req res)))))
	 (else
	  (tprint "pas jsprocedure"))))

   (define (receiver url)
      (let* ((abspath (js-tostring url %this))
	     (rcv (hashtable-get receiver-table abspath)))
	 (unless rcv
	    (set! rcv (instantiate::Receiver (url url)))
	    (hashtable-put! receiver-table abspath rcv))
	 rcv))
      
   (define (get this url handler)
      (with-access::Receiver (receiver url) (get)
	 (set! get (receiver-handler handler))))
   
   (define (post this url handler)
      (with-access::Receiver (receiver url) (post)
	 (set! post (receiver-handler handler))))
   
   (define (put this url handler)
      (with-access::Receiver (receiver url) (put)
	 (set! put (receiver-handler handler))))
   
   (define request-prototype-cmap
      (js-names->cmap
	 (vector (& "get"))
	 :writable #f :configurable #f :inline #t))

   (define request-cmap
      (js-names->cmap
	 (vector (& "method") (& "query") (& "path"))
	 :writable #f :configurable #f :inline #f))

   (define response-prototype-cmap
      (js-names->cmap
	 (vector (& "append") (& "send") (& "sendFile") (& "set") (& "status"))
	 :writable #f :configurable #f :inline #t))

   (define (http-request-get obj key)
      (with-access::http-request obj (header
					authorization
					connection)
	 (cond
	    ((eq? key (& "authorization"))
	     (if authorization
		 (js-string->jsstring authorization)
		 authorization))
	    ((eq? key (& "connection"))
	     (js-string->jsstring (symbol->string! connection)))
	    ((eq? key (& "Hop-Serialize"))
	     (let ((c (assq :hop-serialize header)))
		(if (pair? c)
		    (js-string->jsstring (cdr c))
		    (js-undefined))))
	    ((eq? key (& "Hop-Arguments"))
	     (let ((c (assq :hop-arguments header)))
		(if (pair? c)
		    (js-string->jsstring (cdr c))
		    (js-undefined))))
	    (else
	     (js-undefined)))))
   
   (define request-prototype
      (let ((o (instantiateJsObject
		  (cmap request-prototype-cmap)
		  (__proto__ (js-object-proto %this))
		  (elements (make-vector 2)))))
	 (js-object-inline-set! o 0
	    (js-make-function %this
	       (lambda (this key)
		  (if (isa? this JsWrapper)
		      (with-access::JsWrapper this (obj)
			 (http-request-get obj key))
		      (let ((fun (js-get this (& "get") %this)))
			 (js-call1 %this fun this key))))
	       (js-function-arity 1 0)
	       (js-function-info :name "get" :len 2)))
	 o))

   (define response-prototype
      (let ((o (instantiateJsObject
		  (cmap response-prototype-cmap)
		  (__proto__ (js-object-proto %this))
		  (elements (make-vector 5)))))
	 ;; append
	 (js-object-inline-set! o 0
	    (js-make-function %this
	       (lambda (this key val)
		  (if (isa? this JsWrapper)
		      (with-access::JsWrapper this (obj)
			 (let ((k (js-tostring key %this))
			       (v (js-tostring val %this)))
			    (with-access::http-response-file+ obj (header)
			       (set! header (cons (cons k v) header)))))
		      (let ((fun (js-get this (& "append") %this)))
			 (js-call1 %this fun this key))))
	       (js-function-arity 2 0)
	       (js-function-info :name "append" :len 3)))
	 ;; send
	 (js-object-inline-set! o 1
	    (js-make-function %this
	       (lambda (this val)
		  (if (isa? this JsWrapper)
		      (with-access::JsWrapper this (obj)
			 (with-access::http-response-file+ obj (string)
			    (set! string (js-tostring val %this))))
		      (let ((fun (js-get this (& "send") %this)))
			 (js-call1 %this fun this val))))
	       (js-function-arity 1 0)
	       (js-function-info :name "send" :len 2)))
	 ;; sendFile
	 (js-object-inline-set! o 2
	    (js-make-function %this
	       (lambda (this val)
		  (if (isa? this JsWrapper)
		      (with-access::JsWrapper this (obj)
			 (with-access::http-response-file+ obj (file)
			    (set! file (js-tostring val %this))))
		      (let ((fun (js-get this (& "sendFile") %this)))
			 (js-call1 %this fun this val))))
	       (js-function-arity 1 0)
	       (js-function-info :name "sendFile" :len 2)))
	 ;; set
	 (js-object-inline-set! o 3
	    (js-make-function %this
	       (lambda (this key val)
		  (if (isa? this JsWrapper)
		      (with-access::JsWrapper this (data)
			 (let* ((k (js-tostring key %this))
				(v (js-tostring val %this))
				(o (assoc k data)))
			    (if (pair? o)
				(set-cdr! o v)
				(set! data (cons (cons k v) data)))))
		      (let ((fun (js-get this (& "set") %this)))
			 (js-call1 %this fun this key))))
	       (js-function-arity 2 0)
	       (js-function-info :name "set" :len 3)))
	 ;; status
	 (js-object-inline-set! o 4
	    (js-make-function %this
	       (lambda (this val)
		  (if (isa? this JsWrapper)
		      (with-access::JsWrapper this (obj)
			 (with-access::http-response-file+ obj (start-line)
			    (set! start-line
			       (status-start-line (js-tonumber val %this)))))
		      (let ((fun (js-get this (& "append") %this)))
			 (js-call1 %this fun this val))))
	       (js-function-arity 1 0)
	       (js-function-info :name "status" :len 1)))
	 
	 o))
   
   (define js-header
      (instantiate::JsWrapperDescriptor
	 (name &header)
	 (enumerable #t)
	 (configurable #f)
	 (writable #f)
	 (%get (lambda (obj owner propname %this)
		  (with-access::JsWrapper obj ((req obj) data)
		     (unless data
			(with-access::http-request req (req query)
			   (if query
			       (let ((l (cgi-args->list query)))
				  (set! data (js-alist->jsobject l %this)))
			       (with-access::JsGlobalObject %this (js-object)
				  (set! data (js-new0 %this js-object))))))
		     data)))
	 (%set list)))

   (define (js-request req method)
      (with-access::http-request req (query header path)
	 (let ((o (instantiate::JsWrapper
		     (obj req)
		     (data #f)
		     (cmap request-cmap)
		     (elements (vector method js-header (js-string->jsstring path))))))
	    (js-object-proto-set! o request-prototype)
	    o)))
   
   (define (js-response req)
      (let ((jsr (instantiate::JsWrapper
		    (obj (instantiate::http-response-file+))
		    (data (list '("X-Powered-By: " . "Hop"))))))
	 (js-object-proto-set! jsr response-prototype)
	 jsr))

   (define (js->response req jres %this rep)
      (if (eq? rep jres)
	  (with-access::JsWrapper jres (obj)
	     obj)
	  (scheme->response rep req %this)))

   (define (backend-filter req)
      (when (isa? req http-server-request)
	 (with-access::http-server-request req (abspath method)
	    (let ((rcv (hashtable-get receiver-table abspath)))
	       (when rcv
		  (let ((jres (js-response req)))
		     (with-access::Receiver rcv (get put post)
			(case method
			   ((GET)
			    (when get
			       (js->response req jres %this
				  (get (js-undefined)
				     (js-request req &GET) jres))))
			   ((PUT)
			    (when put
			       (js->response req jres %this
				  (put (js-undefined)
				     (js-request req &PUT) jres))))
			   ((POST)
			    (when post
			       (js->response req jres %this
				  (post (js-undefined)
				     (js-request req &POST) jres))))
			   (else
			    (tprint "method=" method))))))))))

   (define statics
      (list (instantiate::Directory
	       (alias "/hop/0")
	       (path (dirname
			(js-tostring (js-get %module (& "filename") %this)
			   %this))))))
   
   (define (static-filter req)
      (when (isa? req http-server-request)
	 (with-access::http-server-request req (abspath method)
	    (when (eq? method 'GET)
	       (let ((dir (find (lambda (d)
				   (with-access::Directory d (alias)
				      (substring=? abspath alias (string-length alias))))
			     statics)))
		  (when dir
		     (with-access::Directory dir (path alias)
			(let ((file (string-append path
				       (substring abspath
					  (string-length alias)))))
			   (instantiate::http-response-file
			      (content-type (mime-type file "text/plain"))
			      (file file))))))))))

   (define (static this id root)
      (set! statics
	 (cons (instantiate::Directory
		  (alias (format "/hop/~a" id))
		  (path (js-tostring root %this)))
	    statics)))

   (with-access::JsGlobalObject %this (js-object)
      (let ((exports (js-new0 %this js-object)))
         (js-put! %module (& "exports") exports #f %this)
         ;; bind the load function is the pseudo javascript module
         (js-put! exports (& "init")
            (js-make-function %this
               (lambda (this config)
		  (hop-filter-add! backend-filter)
		  (hop-filter-add! static-filter)
		  (let ((o (js-new0 %this js-object)))
		     (js-put! o (& "get")
			(js-make-function %this
			   get
			   (js-function-arity get)
			   (js-function-info :name "get" :len 2))
			#f %this)
		     (js-put! o (& "post")
			(js-make-function %this
			   post
			   (js-function-arity post)
			   (js-function-info :name "post" :len 2))
			#f %this)
		     (js-put! o (& "put")
			(js-make-function %this
			   put
			   (js-function-arity put)
			   (js-function-info :name "put" :len 2))
			#f %this)
		     (js-put! o (& "static")
			(js-make-function %this
			   static
			   (js-function-arity static)
			   (js-function-info :name "static" :len 2))
			#f %this)
		     o))
	       (js-function-arity 1 0)
	       (js-function-info :name "init" :len 1))
	    #f %this))))

;*---------------------------------------------------------------------*/
;*    make-cmap ...                                                    */
;*---------------------------------------------------------------------*/
(define-inline (make-cmap props)
   (js-make-jsconstructmap 
      :methods (make-vector (vector-length props))
      :props props
      :ctor (make-cell (vector-length props))))

