do: build

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
PACKAGE=hop
include ../../Makefile.modules

#*---------------------------------------------------------------------*/
#*    Goals                                                            */
#*---------------------------------------------------------------------*/
build:
	mkdir -p $(NPMDIR)/bin
	echo "#!/usr/bin/env node" > $(NPMDIR)/bin/hopc.mjs
	echo "import * as hopc from \"../lib/hopc.mjs\"" >> $(NPMDIR)/bin/hopc.mjs
	chmod a+rx $(NPMDIR)/bin/hopc.mjs
clean:

cleanall: clean


