#*=====================================================================*/
#*    serrano/prgm/project/hop/hop/node_modules/hop/lib/Makefile       */
#*    -------------------------------------------------------------    */
#*    Author      :  Manuel Serrano                                    */
#*    Creation    :  Fri Aug 28 10:00:50 2015                          */
#*    Last change :  Thu May 16 06:24:30 2024 (serrano)                */
#*    Copyright   :  2015-24 Manuel Serrano                            */
#*    -------------------------------------------------------------    */
#*    hop precompilation                                               */
#*=====================================================================*/
do: build

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
PACKAGE=hop
SCOPE=@hop
include ../../Makefile.modules
BIGLOOEXTRAAPPLIBS = "http"

#*---------------------------------------------------------------------*/
#*    The entries                                                      */
#*---------------------------------------------------------------------*/
.PHONY: build install uninstall hop _hop config

build: o
	$(MAKE) o/hop.$(SHAREDSUFFIX) \
            TARGETNAME=hop \
            OBJECTS=o/hop.o
	$(MAKE) o/_hop.$(SHAREDSUFFIX) \
            TARGETNAME=_hop \
            OBJECTS=o/_hop.o
	$(MAKE) o/config.$(SHAREDSUFFIX) \
            TARGETNAME=config \
            OBJECTS=o/config.o

install:
	$(MAKE) mkdir DIR=$(DESTDIR)$(HOPLIBDIR)/$(LIBSDIR)
	$(MAKE) install-module TARGETNAME=hop
	$(MAKE) install-module TARGETNAME=_hop
	$(MAKE) install-module TARGETNAME=config
	$(RM) -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/lib/o
	chmod -R $(MODDIR) $(DESTDIR)$(HOPLIBDIR)/$(LIBSDIR)
	$(MAKE) cleanup 
	$(MAKE) move-module

install-module:
	$(MAKE) install-shared-lib \
                INSTALL="$(INSTALL)" \
                BOOTLIBDIR=$(BUILDDIR)/$(DIR)/o \
                FILDIR=$(LIBSDIR) \
                LIBDIR=$(HOPLIBDIR) \
                LIB=$(TARGETNAME)
	chmod -R $(MODDIR) $(DESTDIR)$(HOPLIBDIR)/hop/$(HOPRELEASE)/$(DIR)
	cp -r ../../$(PACKAGE) $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules
	touch $(DESTDIR)$(HOPLIBDIR)/$(LIBSDIR)/$(TARGETNAME).$(SHAREDSUFFIX)
	chmod $(MODEXE) $(DESTDIR)$(HOPLIBDIR)/$(LIBSDIR)/$(TARGETNAME).$(SHAREDSUFFIX)

move-module:
	$(RM) -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(SCOPE)/$(PACKAGE)
	$(MAKE) mkdir DIR=$(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(SCOPE)
	mv $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE) \
           $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(SCOPE)
	chmod -R $(MODDIR) $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(SCOPE)

cleanup:
	rm -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/node
	touch $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/lib/_~
	rm -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/lib/*~

uninstall:
	$(MAKE) uninstall-module TARGETNAME=$(SCOPE)/$(PACKAGE)
	$(MAKE) uninstall-module TARGETNAME=$(SCOPE)/_$(PACKAGE)

uninstall-module:
	$(MAKE) uninstall-shared-lib LIB=$(PACKAGE).$(SHAREDSUFFIX)

#*---------------------------------------------------------------------*/
#*    lib                                                              */
#*---------------------------------------------------------------------*/
o:
	mkdir o

hop: o
	$(MAKE) o/$(PACKAGE).$(SHAREDSUFFIX)

_hop: o
	$(MAKE) o/$(PACKAGE).$(SHAREDSUFFIX)

o/$(TARGETNAME).$(SHAREDSUFFIX): $(OBJECTS)
	$(MAKE) shared-lib \
             LDINSTALLNAMEDIR=$(DESTDIR)$(HOPLIBDIR)/$(LIBSDIR) \
             BOOTLIBDIR=$(BUILDDIR)/$(DIR)/o \
             FORCELD=true \
             LIBDEST=$@ \
             SONAME=$(TARGETNAME).$(SHAREDSUFFIX) \
             LDOPTS="-L$(BUILDLIBDIR) -L$(BIGLOOLIBDIR) $(LDOPTS)" \
	     BIGLOOAPPLIBS=$(BIGLOOAPPLIBS)

#*---------------------------------------------------------------------*/
#*    clean                                                            */
#*---------------------------------------------------------------------*/
clean:
	$(RM) -rf o
	$(RM) -f config.mjs

devclean:


distclean: devclean

#*---------------------------------------------------------------------*/
#*    Suffixes                                                         */
#*---------------------------------------------------------------------*/
.SUFFIXES:
.SUFFIXES: .scm .o .hop .mjs

#*---------------------------------------------------------------------*/
#*    explicit rules                                                   */
#*---------------------------------------------------------------------*/
o/_hop.o: _hop.hop
	@ $(call compile3,$(HOPC), $(HFLAGS), $(BCFLAGS) -dload-sym,$(BLFLAGS)$(BCFLAGSMODULES),-c,$< -o $@)

#*---------------------------------------------------------------------*/
#*    The implicit rules                                               */
#*---------------------------------------------------------------------*/
o/%.o: %.scm
	@ $(call compile2,$(BIGLOO),$(BCFLAGS),$(BLFLAGS),-c,$< -o $@)

o/%.o: %.hop
	@ $(call compile3,$(HOPC),$(HFLAGS),$(BCFLAGS),$(BLFLAGS),-c,$< -o $@)

%.scm: %.hop
	@ $(call compile3,$(HOPC),$(HFLAGS),$(BCFLAGS),$(BLFLAGS),-s,$< -o $@)

o/%.o: %.mjs
	@ $(call compile3,$(HOPC),$(HSFLAGS),$(BCFLAGS) -fno-inlining -copt -Os -dload-sym,$(BLFLAGS),$(BHOPCFLAGS) -c -fno-inlining --js-no-module-main --js-module-name __hopjs_$* --js-module-path $* -O2s,$< -o $@)

