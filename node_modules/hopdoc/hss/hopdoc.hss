/*---------------------------------------------------------------------*/
/*    grey effect                                                      */
/*---------------------------------------------------------------------*/
.hopdoc-grey {
  -webkit-filter: grayscale(1) sepia(0.2);
  filter: grayscale(1);
  transition: 0.5s all;
}

.hopdoc-grey:hover {
  -webkit-filter: none;
  filter: none;
}  

/*---------------------------------------------------------------------*/
/*    label                                                            */
/*---------------------------------------------------------------------*/
span.lbl-lg {
  padding: 8px;
}

/*---------------------------------------------------------------------*/
/*    body                                                             */
/*---------------------------------------------------------------------*/
body {
  position: relative;
  color: #222;
}

/*---------------------------------------------------------------------*/
/*    h1                                                               */
/*---------------------------------------------------------------------*/
h1 {
  padding-bottom: 4px;
  border-bottom: 1px solid #555;
}

.jumbotron h1 {
  border: 0;
}

/*---------------------------------------------------------------------*/
/*    navigation                                                       */
/*---------------------------------------------------------------------*/
nav.sidebar {
  background-color: #f7f7f7;
  border-radius: 4px;
  border: 1px solid #ccc;
  width: 20em;
  text-overflow: ellipsis;
}

nav.sidebar a {
  color: #777;
}
  
.affix-top {
  right: 14px;
  position: absolute;
}

.affix {
  right: 23px;
  top: 20px;
}

.affix-bottom {
  right: 23px;
  top: 20px;
}

nav.sidebar li {
  border-left: 4px solid;
  border-left-color: transparent;
}

nav.sidebar .active {
  font-weight: bold;
  border-left-color: #900;
}

nav.sidebar .active * {
  color: #222;
}

/*---------------------------------------------------------------------*/
/*    blockquote                                                       */
/*---------------------------------------------------------------------*/
p.warning {
  margin-top: 3ex;
  border-left: 4px solid #f0ad4e;
  padding-left: 4px;
  margin-top: 1ex;
}

p.danger {
  margin-top: 3ex;
  border-left: 4px solid #d00;
  padding-left: 4px;
  margin-top: 1ex;
}
