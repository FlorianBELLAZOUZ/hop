#*    Copyright   :  2015-24 Manuel Serrano                            */
#*    -------------------------------------------------------------    */
#*    syslog precompilation                                            */
#*=====================================================================*/
do: build

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
PACKAGE=syslog
SCOPE=@hop
BIGLOOEXTRAAPPLIBS=

include ../../Makefile.modules
include ../../Makefile.scoped

#*---------------------------------------------------------------------*/
#*    The entries                                                      */
#*---------------------------------------------------------------------*/
.PHONY: build install uninstall hop _hop config

build: o
	$(MAKE) o/syslog.$(SHAREDSUFFIX) TARGETNAME=syslog OBJECTS=o/syslog.o
	$(MAKE) o/_syslog.$(SHAREDSUFFIX) TARGETNAME=_syslog OBJECTS=o/_syslog.o

npm: clean

install: mkdirs
	$(MAKE) install-so TARGETNAME=syslog
	$(MAKE) install-so TARGETNAME=_syslog
	$(RM) -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/hop/o
	$(INSTALL) syslog.mjs $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/syslog.mjs
	$(INSTALL) _syslog.hop $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/_syslog.hop
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
	$(INSTALL) ../type/$(PACKAGE).d.ts $(INSTALLDIR)/type && chmod $(MODFILE) $(INSTALLDIR)/type/$(PACKAGE).d.ts
