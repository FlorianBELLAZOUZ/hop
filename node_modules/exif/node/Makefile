#*    Last change :  Thu Mar 28 18:26:12 2024 (serrano)                */
#*    Copyright   :  2023-24 manuel serrano                            */
#*    -------------------------------------------------------------    */
#*    Node's exif precompilation                                       */
#*=====================================================================*/
do: build

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
include ../../Makefile.modules

EXIF_SRC=exif.scm

BEAUTIFY=cat

#*---------------------------------------------------------------------*/
#*    Goals                                                            */
#*---------------------------------------------------------------------*/
build: exif.mjs

exif.mjs: exif-module.js $(EXIF_SRC)
	cat exif-module.js > $@
	$(BUILDBINDIR)/mkjsast -m javascript $(EXIF_SRC) | $(BEAUTIFY) >> $@
	echo "// generated by hop2js" >> $@
	$(BUILDBINDIR)/hop2js $(EXIF_SRC) | $(BEAUTIFY) >> $@

postbuild:

clean:
	rm -f exif.mjs

cleanall: clean

