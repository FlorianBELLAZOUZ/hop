#*    -------------------------------------------------------------    */
#*    exif precompilation                                              */
#*=====================================================================*/
do: build

#*---------------------------------------------------------------------*/
#*    Configuration                                                    */
#*---------------------------------------------------------------------*/
PACKAGE=exif
SCOPE=@hop
BIGLOOEXTRAAPPLIBS=

include ../../Makefile.modules
include ../../Makefile.scoped

#*---------------------------------------------------------------------*/
#*    The entries                                                      */
#*---------------------------------------------------------------------*/
.PHONY: build install uninstall hop _hop config

build: o
	$(MAKE) o/exif.$(SHAREDSUFFIX) TARGETNAME=exif OBJECTS=o/exif.o
	$(MAKE) o/_exif.$(SHAREDSUFFIX) TARGETNAME=_exif OBJECTS=o/_exif.o

npm: clean

install: mkdirs
	$(MAKE) install-so TARGETNAME=exif
	$(MAKE) install-so TARGETNAME=_exif
	$(RM) -rf $(DESTDIR)$(HOPLIBDIR)/$(HOPFILDIR)/node_modules/$(PACKAGE)/hop/o
	$(INSTALL) exif.mjs $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/exif.mjs
	$(INSTALL) _exif.hop $(INSTALLDIR)/hop && chmod $(MODFILE) $(INSTALLDIR)/hop/_exif.hop
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
	$(INSTALL) ../type/$(PACKAGE).d.ts $(INSTALLDIR)/type && chmod $(MODFILE) $(INSTALLDIR)/type/$(PACKAGE).d.ts
	$(INSTALL) ../package.json $(INSTALLDIR) && chmod $(MODFILE) $(INSTALLDIR)/package.json
