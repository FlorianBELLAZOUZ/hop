(module hophome_widgets

   (import hophome_config
	   hophome)
   
   (export (<HOME> base . obj)))

;*---------------------------------------------------------------------*/
;*    <HOME> ...                                                       */
;*---------------------------------------------------------------------*/
(define (<HOME> base . obj)
   (<HTML>
      (<HEAD>
	 :title "Hop Home page"
