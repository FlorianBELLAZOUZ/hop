	       (<FOOT-BUTTON>
		  :href "http://www.mozilla.org/"
		  :title "Mozilla"
		  :inline #t
		  :src "mozilla.png")
	       (<FOOT-BUTTON>
		  :href "http://www.apple.com/macosx/features/safari/"
		  :title "Safari"
		  :inline #t
		  :src "safari.png")
	       (<FOOT-BUTTON>
		  :href "http://www.opera.com"
		  :title "Opera"
		  :inline #t
		  :src "opera.png")
