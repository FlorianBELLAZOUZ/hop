body {
  background: #ebfe86;
  font-family: Arial;
}

h1 {
  font-size: 12px;
  font-weight: bold;
  text-shadow: #aaa 2px 2px 2px;
}

input {
  border: 1px solid #ccc;
}

button {
  margin-left: 1em;
  border: 1px solid #ccc;
  border-radius: 2px;
}

button:hover {
  text-shadow: 0px 0px 8px #ff0000;
}
