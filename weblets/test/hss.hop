(module weblet_test-hss
   (import weblet_test)
   (export test/hss))

;*---------------------------------------------------------------------*/
;*    test/hss ...                                                     */
;*---------------------------------------------------------------------*/
(define-service (test/hss)
   (<TEST-HTML> :include "hop-lframe"
      :source (service-resource test/hss "hss.hop")
      (<DIV> :class "comment"
	 "This test checks HSS compilation.")
      (<LFRAME> :class "lframe-left"
	 (<LFLABEL> "foo")
	 "An lframe with a left label.")
      (<LFRAME> :class "lframe-center"
	 (<LFLABEL> "bar")
	 "An lframe with a centered label and large margins.")
      (<LFRAME> :class "lframe-right"
	 (<LFLABEL> "bar")
	 "An lframe with a right label an angular border.")))
      
