lframe.lframe-left {
  -hop-label-align: left;
  color: red;
}

lframe.lframe-center {
  -hop-label-align: center;
  -hop-label-margin: 30px 10px 10px 10px;
}

lframe.lframe-right {
  -hop-label-align: right;
  -hop-label-border-radius: 0;
  -hop-label-border: 2px ridge green;
  font-weight: bold;
}

lframe.lframe-sub:first-child {
  font-style: italic;
}

lframe.lframe-sub:first-line {
  color: blue;
}

lframe.lframe-sub:first-letter {
  font-weight: bold;
  font-size: 120%;
}

lframe.lframe-sub + div {
  border: 1px dotted red;
  margin-bottom: 2ex;
}

lframe.lframe-sub > div {
  border: 1px dashed hsv(46,100,100);
  margin-top: 1ex;
  margin-bottom: 1ex;
}
