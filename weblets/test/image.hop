(module weblet_test-image
   (import weblet_test)
   (export test/images))

;*---------------------------------------------------------------------*/
;*    test/images ...                                                  */
;*---------------------------------------------------------------------*/
(define-service (test/images)
   (<TEST-HTML>
      (<DIV> :class "comment"
	 "This test checks images. If the test succeeds you should see
twice the same image.")
      (<H3> "A regular image")
      (<IMG> :src (service-resource test/images
				    (make-file-name "etc" "logo.png")))
      (<H3> "An inlined image")
      (<IMG> :src (service-resource test/images
				    (make-file-name "etc" "logo.png"))
	 :inline #t)))
      
