(module weblet_test-fselector
   (import weblet_test)
   (export test/fselector))

;*---------------------------------------------------------------------*/
;*    test/fselector ...                                               */
;*---------------------------------------------------------------------*/
(define-service (test/fselector)
   (<TEST-HTML> :include '("hop-fileselect" "hop-window" "hop-tree")
      :source (service-resource test/fselector "fselector.hop")
      (<TABLE>
	 (<TR>
	    (<TH>
	       "File: ")
	    (<TD>
	       (<FILESELECT>
		  :id "file"
		  :value (hop-share-directory)
		  :onchange ~(alert this.value)
		  :size 60))
	    (<TD>
	       (<FILEBROWSE>
		  :title "Hop File browser"
		  :value "/"
		  :path (hop-share-directory)
		  :onmousedown ~(set! this.value "/")
		  :onselect ~(alert this.value)))))))
      
   
