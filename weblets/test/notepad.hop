(module weblet_test-notepad
   (import weblet_test)
   (export test/notepad))

;*---------------------------------------------------------------------*/
;*    test/notepad ...                                                 */
;*---------------------------------------------------------------------*/
(define-service (test/notepad)
   (<TEST-HTML> :include "hop-notepad"
      (<DIV> :class "comment"
	 "This test checks notepads.")
      (<H3> "A static Notepad")
      (<NOTEPAD>
	 (<NPTAB>
	    (<NPTABHEAD> "Numbers")
	    (<TABLE> (<TR> (map <TD> (iota 10)))))
	 (<NPTAB>
	    (<NPTABHEAD> "Characters")
	    (<TABLE> (<TR> (map <TD> (iota 10 65))))))
      (<H3> "A dynamic Notepad"
	    (<NOTEPAD>
	       (<NPHEAD>
		  (<CENTER> (<B> "An inline of Notepad")))
	       (<NPTAB>
		  (<NPTABHEAD> "Readme")
		  [In this notepad, the server date is still.])
	       (<NPTAB>
		  (<NPTABHEAD> "Server date")
		  (current-date)))
	    (<NOTEPAD>
	       (<NPHEAD>
		  (<CENTER> (<B> "A remote of Notepad")))
	       (<NPTAB>
		  (<NPTABHEAD> "Creation date")
		  (date))
	       (<NPTAB>
		  (<NPTABHEAD> "Server date")
		  (<DELAY>
		     (lambda ()
			(date))))))))
