/*    CSS for the TEST weblet                                          */
/*=====================================================================*/

$(define border-color "#bbb")

body {
  background: #e0e0e0;
  font-family: arial;
}

h4 {
  margin-top: 2ex;
  margin-bottom: 0.5ex;
  padding: 0;
}

ul {
  margin-top: 0;
  margin-bottom: 0;
  font-size: 90%;
}

table.test {
  width: 45em;
  margin-top: 20px;
  padding: 10px;
  border: 1px solid $border-color;
  background: white;
  -moz-border-radius: 0.5em;
}

table.test img#logo {
  padding: 20px;
}

table.test td {
  text-align: left;
}

td#title {
  font-size: x-large;
  font-weight: bold;
  border-bottom: 1px solid $border-color;
  margin-bottom: 20px;
  padding-bottom: 1px;
  width: 100%;
}

table.test td#logo {
  vertical-align: top;
  text-align: center;
  width: 48px;
}

a {
  font-family: Bitstream Vera Sans Mono, Andale Mono, monospace;
  font-size: small;
}

div.comment {
  font-style: italic;
  color: #333;
  margin-bottom: 3ex;
}

td#source {
  padding-top: 1ex;
  padding-bottom: 2ex;
  cursor: default;
  font-size: small;
}

td#source span {
  color: blue;
}

td#source span:hover {
  text-decoration: underline;
}

pre {
  overflow: auto;
  border: 1px dotted #777;
  background: #ffe;
}

/*---------------------------------------------------------------------*/
/*    Hss tests                                                        */
/*---------------------------------------------------------------------*/
lframe.lframe-left {
  -hop-label-align: left;
}

lframe.lframe-center {
  -hop-label-align: center;
  -hop-label-margin: 20px 0 0 0;
}

lframe.lframe-right {
  -hop-label-align: right;
  -hop-label-border-radius: 0;
}
