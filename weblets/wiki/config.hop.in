;*---------------------------------------------------------------------*/
;*    The module                                                       */
;*---------------------------------------------------------------------*/
(module wiki_config

   (export (wiki-version::bstring)
	   (wiki-editor::bstring)
	   (wiki-editor-set! ::bstring)

	   (wiki-preferences-save filename)
	   (wiki-preferences-load filename)))

;*---------------------------------------------------------------------*/
;*    wiki-version ...                                                 */
;*---------------------------------------------------------------------*/
(define (wiki-version)
   "@VERSION@")

;*---------------------------------------------------------------------*/
;*    wiki-editor ...                                                  */
;*---------------------------------------------------------------------*/
(define-parameter wiki-editor
   "emacs")

;*---------------------------------------------------------------------*/
;*    wiki-preferences ...                                             */
;*---------------------------------------------------------------------*/
(define-preferences wiki-preferences
   ("editor" string wiki-editor))
