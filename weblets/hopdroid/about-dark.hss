/*    ABOUT dark style                                                 */
/*=====================================================================*/

body[data-theme=dark] div.about-logo {
    border: 0px;
    background-color: var( --dark-margincolor );
    color: white;
}

body[data-theme=dark] div.about-phone-model, div.about-phone-product {
    color: #ccc;
}

body[data-theme=dark] div.about-info {
    background-color: var( --dark-bgcolor );
    border-top: 1px solid #555;
}

body[data-theme=dark] div.section-end {
    border-bottom: 1px solid #555;
}

body[data-theme=dark] div.about-info-entry .title {
    color: #fff;
}

body[data-theme=dark] div.about-info-entry .value {
    color: #ccc;
}

body[data-theme=dark] div.about-info-entry .icon svg *{
    fill: #eee;
}

