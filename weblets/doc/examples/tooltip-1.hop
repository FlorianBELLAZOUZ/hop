;; A simple //tooltip//
(<HTML>
   (<HEAD> :css "hop.css" :jscript "hop.js")
   (<BODY>
      (let ((tp (<TOOLTIP> (<TABLE>
			      (<TR> (<TH> :colspan 2 "A tooltip"))
			      (<TR> (<TD> 1) (<TD> 2))
			      (<TR> (<TD> "one") (<TD> "two"))))))
	 (list
	  tp
	  (<SPAN>
	     "Come with me"
	     :onmouseover ~(tooltip-show event $tp (- (hop-event-mouse-x event) 10) (- (hop-event-mouse-y event) 100))
	     :onmouseout ~(tooltip-hide))))))
