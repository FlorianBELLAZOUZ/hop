 (<HTML>
    (<HEAD>
       :jscript "hop-fileselect.js" :css "hop-fileselect.css"
       :jscript "hop-iwindow.js" :css "hop-iwindow.css"
       :jscript "hop-tree.js" :css "hop-tree.css")
    (<BODY>
       (<FILEBROWSE>
	  :value "/" :path "/tmp"
	  :filter (lambda (d)
		     (or (not (directory? d))
			 (not (string=? (basename d) "lost+found"))))
	  :onselect ~(alert "FILEBROWSE=" this.value))))
