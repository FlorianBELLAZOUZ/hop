;*---------------------------------------------------------------------*/
;*    The module                                                       */
;*---------------------------------------------------------------------*/
(module hopdoc_config
   (export (doc-version)
	   (doc-date)
	   (doc-author)
	   (doc-dir)
	   (doc-api-dir)
	   (doc-weblets-dir)
	   (doc-wiki-dir)
	   (doc-core-dir)
	   (doc-hss-dir)
	   (doc-tutorials-dir)
	   (doc-rc-directory)
	   (doc-suffix)
	   (doc-editor)
	   (doc-editor-set! ::obj)
	   (doc-dashboard)
	   (doc-dashboard-set! ::obj)
	   (doc-preferences-load ::bstring)
	   (doc-preferences-save ::bstring)
	   (doc-preferences-edit)))

;*---------------------------------------------------------------------*/
;*    Version                                                          */
;*---------------------------------------------------------------------*/
(define (doc-version) "1.1.0")
(define (doc-date) "01 February 2009")
(define (doc-author) "M. Serrano")

;*---------------------------------------------------------------------*/
;*    doc-dir                                                          */
;*---------------------------------------------------------------------*/
(define-parameter doc-dir (dirname (the-loading-file)))

;*---------------------------------------------------------------------*/
;*    doc-api-dir                                                      */
;*---------------------------------------------------------------------*/
(define-parameter doc-api-dir (make-file-name (doc-dir) "api"))

;*---------------------------------------------------------------------*/
;*    doc-weblets-dir                                                  */
;*---------------------------------------------------------------------*/
(define-parameter doc-weblets-dir (make-file-name (doc-dir) "weblets"))

;*---------------------------------------------------------------------*/
;*    doc-tutorials-dir                                                */
;*---------------------------------------------------------------------*/
(define-parameter doc-tutorials-dir (make-file-name (doc-dir) "tutorials"))

;*---------------------------------------------------------------------*/
;*    doc-wiki-dir                                                     */
;*---------------------------------------------------------------------*/
(define-parameter doc-wiki-dir (make-file-name (doc-dir) "wiki"))

;*---------------------------------------------------------------------*/
;*    doc-core-dir                                                     */
;*---------------------------------------------------------------------*/
(define-parameter doc-core-dir (make-file-name (doc-dir) "core"))

;*---------------------------------------------------------------------*/
;*    doc-hss-dir                                                      */
;*---------------------------------------------------------------------*/
(define-parameter doc-hss-dir (make-file-name (doc-dir) "hss"))

;*---------------------------------------------------------------------*/
;*    doc-rc-directory ...                                             */
;*---------------------------------------------------------------------*/
(define-parameter doc-rc-directory (make-file-name (hop-rc-directory) "doc"))

;*---------------------------------------------------------------------*/
;*    doc-suffix ...                                                   */
;*---------------------------------------------------------------------*/
(define (doc-suffix) "wiki")

;*---------------------------------------------------------------------*/
;*    doc-editor ...                                                   */
;*---------------------------------------------------------------------*/
(define-parameter doc-editor "emacs")

;*---------------------------------------------------------------------*/
;*    doc-dashboard ...                                                */
;*---------------------------------------------------------------------*/
(define-parameter doc-dashboard "hop-dashboard")

;*---------------------------------------------------------------------*/
;*    preferences ...                                                  */
;*---------------------------------------------------------------------*/
(define-preferences doc-preferences
   "Setup"
   ("Editor" string doc-editor)
   "Gui"
   ("Dashboard" expr doc-dashboard))
