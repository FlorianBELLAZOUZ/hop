;*---------------------------------------------------------------------*/
;*    The module                                                       */
;*---------------------------------------------------------------------*/
(module hopdoc
   (import  hopdoc_config
	    hopdoc_api
	    hopdoc_wiki
	    hopdoc_widgets
	    hopdoc_services
	    hopdoc_tutorials
	    hopdoc_libraries
	    hopdoc_weblets
	    hopdoc_index
	    hopdoc_search))

;*---------------------------------------------------------------------*/
;*    doc ...                                                          */
;*---------------------------------------------------------------------*/
(define-service (doc)
   (doc-main #f))

;*---------------------------------------------------------------------*/
;*    doc/documentation ...                                            */
;*---------------------------------------------------------------------*/
(define-service (doc/documentation)
   (let* ((file (service-resource doc/documentation "etc/doc.wiki"))
	  (url (format "/hop/doc/weblet?weblet=~a" file)))
      (instantiate::http-response-string
	 (start-line "HTTP/1.0 301 Moved Permanently")
	 (header (list (cons 'location: url))))))

;*---------------------------------------------------------------------*/
;*    doc/weblet ...                                                   */
;*---------------------------------------------------------------------*/
(define-service (doc/weblet weblet)
   (setup-api-tables!)
   (doc-main (<SCRIPT>
		:type "text/javascript"
		(select-weblet-pad-on-load weblet))))

;*---------------------------------------------------------------------*/
;*    doc-main ...                                                     */
;*---------------------------------------------------------------------*/
(define (doc-main script)
   (let* ((req (current-request))
	  (prefs (make-file-name (doc-rc-directory) "doc.prefs")))
      (thread-start! (make-thread (lambda () (setup-api-tables!))))
      (when (file-exists? prefs) (doc-preferences-load prefs))
      (<DOC> :script script
	 ~(set! api-history-service $doc/api)
	 ~(set! tutorial-history-service $doc/tutorial)
	 (<NOTEPAD>
	    :id "doc-notepad"
	    (<NPHEAD> "")
	    (<NPTAB> :id "doc-api"
	       (<NPTABHEAD> "API")
	       (<DIV> :class "doc-tab"
		  (<API>)))
	    (<NPTAB> :id "doc-core"
	       (<NPTABHEAD> "Core language")
	       (<DIV> :class "core doc-tab"
		  (doc-page
		   (make-file-name (doc-core-dir) "core.wiki")
		   (make-wiki-request-syntax (doc-wiki-syntax)))))
	    (<NPTAB> :id "doc-libraries"
	       (<NPTABHEAD> "Libraries")
	       (<DIV> :class "doc-tab"
		  (<LIBRARIES>)))
	    (<NPTAB> :id "doc-wiki"
	       (<NPTABHEAD> "Wiki syntax")
	       (<DIV> :class "wiki doc-tab"
		  (doc-page
		   (make-file-name (doc-wiki-dir) "syntax.wiki")
		   (make-wiki-request-syntax (doc-wiki-syntax)))))
	    (<NPTAB> :id "doc-weblets"
	       (<NPTABHEAD> "Weblets")
	       (<DIV> :class "doc-tab"
		  (<WEBLETS> req)))
	    (<NPTAB> :id "doc-tutorials"
	       (<NPTABHEAD> "Tutorials")
	       (<DIV> :class "doc-tab"
		  (<TUTORIALS> req)))
	    (<NPTAB> :id "doc-index"
	       (<NPTABHEAD> "Index")
	       (<DIV> :class "doc-tab"
		  (<INDEX>)))))))


