/*---------------------------------------------------------------------*/
/*    The module                                                       */
/*---------------------------------------------------------------------*/
$(module flipcounter-api_hss)
$(define _dir (dirname (the-loading-dir)))

/*---------------------------------------------------------------------*/
/*    flipcounter ...                                                  */
/*---------------------------------------------------------------------*/
$(define-hss-type flipcounter "div[data-hss-tag=flipcounter]"

   (define-hss-property (background-color v)
      (if (and (pair? v) (string=? (car v) "transparent"))
          (format "li { background: url(~a/etc/img/digits-transparent.png) 0 0 no-repeat }"
             _dir))))


flipcounter li{ background: $(format "url(\"~a/etc/img/digits.png\")" _dir) 0 0 no-repeat }
flipcounter ul.cd{ float:left;list-style-type:none;margin:0;padding:0 }
flipcounter li.t{ background-position:0 0;width:53px;height:39px }
flipcounter li.b{ background-position:0 0;width:53px;height:64px }
flipcounter li.s{ background-position:-53px -1030px;width:14px;height:103px }
