/*---------------------------------------------------------------------*/
/*    Global configuration                                             */
/*---------------------------------------------------------------------*/
${ var borderColor = "#bbb" }
${ var backgroundColor =  "#f9f9f9" }

/*---------------------------------------------------------------------*/
/*    General markups                                                  */
/*---------------------------------------------------------------------*/
body {
  background: #e0e0e0;
  font-family: arial, sans serif;
}

/*---------------------------------------------------------------------*/
/*    Main frame                                                       */
/*---------------------------------------------------------------------*/
div#main {
  width: 90%;
  margin-top: 20px;
  padding: 10px;
  border: 1px solid ${borderColor};
  background: ${backgroundColor};
  border-radius: 0.5em;
  margin-left: auto;
  margin-right: auto;
}

