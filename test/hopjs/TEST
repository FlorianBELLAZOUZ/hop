#!/bin/bash

rest=
verb=
basedir=$pwd
hop=../../bin/hop

while : ; do

  case $1 in
    "")
     break;;

  -h|--help)
    echo "usage: $0 [-v|-s] [--basedir dir] [--hop hop]";
    echo "example: $0";
    exit 0;;

  -v)
    verb="$verb -v";;

  -s)
    verb="";;

  -*)
    rest=$1;;

  --basedir)
    shift;
    basedir=$1;;    

  --hop)
    shift;
    hop=$1;;    

  esac

  shift
done   

success=0
failure=0
i=0

run() {
  i=`expr $i + 1`

  echo -n "$i. $path ... "
  if [ "$verb " != " " ]; then
    echo ""
    echo -n "$hop -g --no-zeroconf $* ..."
  fi
  $hop -g --no-zeroconf $* > /tmp/TEST-HOPJS.out 2>&1

  if [ $? = 0 ]; then
    echo "ok.";
    success=`expr $success + 1`
  else
    echo "failure !!!"
    if [ "$verb " != " " ]; then
      cat /tmp/TEST-HOPJS.out
    fi
    failure=`expr $failure + 1`
  fi
  /bin/rm -f /tmp/TEST-HOPJS.out
}

for path in noserv/*.js; do
    run $path --no-server
done

for path in serv/*.js; do
    run $path -p 0 --rc-file passwd.hop
done

echo "`expr $success + $failure` executed"
echo "   $success success"
echo "   $failure failure"
