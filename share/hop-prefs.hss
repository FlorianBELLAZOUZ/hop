/*    -------------------------------------------------------------    */
/*    CSS for <PREFS> markups                                          */
/*=====================================================================*/

/*---------------------------------------------------------------------*/
/*    <PREFS>                                                          */
/*---------------------------------------------------------------------*/
prefs {
  width: 100%;
}

/*---------------------------------------------------------------------*/
/*    <PRLABEL>                                                        */
/*---------------------------------------------------------------------*/
prlabel {
  font-weight: bold;
  text-transform: capitalize;
}

/*---------------------------------------------------------------------*/
/*    <PR>                                                             */
/*---------------------------------------------------------------------*/
pr {
}

pr-name {
  width: 10em;
  vertical-align: top;
  font-size: 90%;
}

pr-name:after {
  content: ":";
}

pr-editor-bool {
  white-space: nowrap;
  color: #00c;
  font-size: small;
}

pr-editor-expr {
  width: 100%;
  color: #00c;
}

pr-editor-expr.hop-pr-changed {
  color: #f00;
}

pr-editor-text {
  width: 100%;
  color: #00c;
}

/*---------------------------------------------------------------------*/
/*    Editors                                                          */
/*---------------------------------------------------------------------*/
table.pr-editor-enum {
  width: 100%;
}
