/*---------------------------------------------------------------------*/
/*    <PREFS>                                                          */
/*---------------------------------------------------------------------*/
prefs {
  width: 100%;
}

/*---------------------------------------------------------------------*/
/*    <PRLABEL>                                                        */
/*---------------------------------------------------------------------*/
prlabel {
  font-weight: bold;
  text-transform: capitalize;
}

/*---------------------------------------------------------------------*/
/*    <PR>                                                             */
/*---------------------------------------------------------------------*/
pr {
}

pr-type {
  width: 10em;
}

pr-type:after {
  content: ":";
}

pr-editor-expr {
  width: 100%;
  color: #000;
}

pr-editor-expr.hop-pr-changed {
  color: #f00;
}
