/*---------------------------------------------------------------------*/
/*    The module                                                       */
/*---------------------------------------------------------------------*/
$(module __hop_hop-slider-hss)

/*---------------------------------------------------------------------*/
/*    HSS declarations                                                 */
/*---------------------------------------------------------------------*/
$(define-hss-type slider "table[hssclass=hop-slider]"

    (define-hss-property (line-left-color v)
       (format "div.lineleft { background: ~l; }" v))

    (define-hss-property (line-right-color v)
       (format "div.lineright { background: ~l; }" v))

    (define-hss-property (cursor-color v)
       (format "td.cursor { background-color: ~l; }" v))

    (define-hss-property (caption-color v)
       (format "td.caption { color: ~l; }" v))

    (define-hss-property (caption-font-size v)
       (format "td.caption { font-size: ~l; }" v))
 
    (define-hss-property (caption-font-family v)
       (format "td.caption { font-family: ~l; }" v))

    (define-hss-property (caption-font-weight v)
       (format "td.caption { font-size: ~l; }" v))

    (define-hss-property (line-height v)
       (format "div.line { height: ~l; }" v))

    (define-hss-property (cursor-height v)
       (list (format "height: ~l;" v)
             (format "td.cursor { height: ~l; }" v)))

    (define-hss-property (cursor-width v)
       (list (format "td.cursor { width: ~l; }" v))))

/*---------------------------------------------------------------------*/
/*    public declarations                                              */
/*---------------------------------------------------------------------*/
/* <public> */
slider {
  line-left-color: #68f;
  line-right-color: #ccc;
  line-height: 3px;
  cursor-height: 8px;
  cursor-width: 14px;
  cursor-color: #ccc;
  caption-color: black;
  caption-font-size: 8px;
  caption-font-family: Arial, Helvetica, sans-serif;
  caption-font-weight: bold;
}
/* </public> */

/*---------------------------------------------------------------------*/
/*    private declarations                                             */
/*---------------------------------------------------------------------*/
slider {
  border-collapse: collapse;
  border-spacing: 0;
  border: 1px solid transparent;
  border: 1px solid red;
  border: 0;
  user-select: none;
} 

/*---------------------------------------------------------------------*/
/*    Line configuration                                               */
/*---------------------------------------------------------------------*/
slider td {
  vertical-align: middle;
  border: 1px solid transparent;
  border: 0;
}

slider div.line {
  height: 3px;
  border-top: 1px solid #999;
  border-bottom: 1px solid #555;
  user-select: none;
  margin: 0;
}

slider div.lineleft {
  border-right: 0;
  border-left: 1px solid #555;
}
  
slider div.lineright {
  border-left: 0;
  border-right: 1px solid #999;
}

/*---------------------------------------------------------------------*/
/*    Cursor configuration                                             */
/*---------------------------------------------------------------------*/
slider td.cursor {
  margin: 0;
  padding: 0;
  border-left: 1px solid #999;
  border-top: 1px solid #999;
  border-right: 1px solid #555;
  border-bottom: 1px solid #555;
  user-select: none;
  vertical-align: middle;
  background-image: url( "icons/hop-slider/cursor.png" );
  background-position: center center;
  background-repeat: repeat-y;
  user-select: none;
  cursor: pointer;
}
   
slider td.cursor:hover {
  background-color: #999;
}

slider td.caption {
  user-select: none;
  text-align: center;
}
