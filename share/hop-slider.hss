/*---------------------------------------------------------------------*/
/*    The module                                                       */
/*---------------------------------------------------------------------*/
$(module __hop_hop-slider-hss)

/*---------------------------------------------------------------------*/
/*    HSS declarations                                                 */
/*---------------------------------------------------------------------*/
$(define-hss-type slider "table[hssclass=hop-slider]"

    (define-hss-property (line-height v)
       (format "div.line { height: ~l; }" v))

    (define-hss-property (line-border-top v)
       (format "div.line { border-top: ~l; }" v))

    (define-hss-property (line-border-right v)
       (format "div.line { border-right: ~l; }" v))

    (define-hss-property (line-border-bottom v)
       (format "div.line { border-bottom: ~l; }" v))

    (define-hss-property (line-border-left v)
       (format "div.line { border-left: ~l; }" v))

    (define-hss-property (line-left-color v)
       (format "div.lineleft { background-color: ~l; }" v))

    (define-hss-property (line-right-color v)
       (format "div.lineright { background-color: ~l; }" v)))

$(define-hss-type slidercaption "td[hssclass=hop-slider-caption]")

$(define-hss-type slidercursor "td[hssclass=hop-slider-cursor]"
    (define-hss-property (-hop-background-gradient v)
       (format "background: ~l; background-image: ~l;" v v))
    (define-hss-property (background v)
       (list (format "div[hssclass=hop-slider-cursor-background] { background: ~l; }" v)))
    (define-hss-property (background-image v)
       (list (format "div[hssclass=hop-slider-cursor-background] { background-image: ~l; }" v)))
    (define-hss-property (background-repeat v)
       (list (format "div[hssclass=hop-slider-cursor-background] { background-repeat: ~l; }" v)))
    (define-hss-property (background-position v)
       (list (format "div[hssclass=hop-slider-cursor-background] { background-position: ~l; }" v))))

/*---------------------------------------------------------------------*/
/*    public declarations                                              */
/*---------------------------------------------------------------------*/
/* <public> */
slider {
  line-left-color: #68f;
  line-right-color: #ccc;
  line-height: 3px;
  line-border-left: 1px solid #999;
  line-border-right: 1px solid #999;
  line-border-top: 1px solid #999;
  line-border-bottom: 1px solid #555;
}

slidercaption {
  color: black;
  font-size: 8px;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: bold;
  text-align: center;
  overflow: hidden;
  max-width: 14px;
}

slidercursor {
  height: 7px;
  width: 14px;
  color: #ccc;
  border-left: 1px solid #999;
  border-top: 1px solid #999;
  border-right: 1px solid #555;
  border-bottom: 1px solid #555;
  cursor: pointer;
  background-image: share( "icons/hop-slider/cursor.png" );
  background-position: center center;
  background-repeat: repeat-y;
  background-color: #bbb;
}

slidercursor:hover {
  background-color: #999;
}

@media all and (max-device-width: 800px) {
  slider {
    line-height: 10px;
  }

  slidercursor {
    height: 14px;
    width: 18px;
  }

  slidercaption {
    color: black;
    font-size: 12px;
  }
}
      
/* </public> */

/*---------------------------------------------------------------------*/
/*    private declarations                                             */
/*---------------------------------------------------------------------*/
slider {
  border-collapse: collapse;
  border-spacing: 0;
  border: 0;
  user-select: none;
  font-size: 2pt;
  width: 100%;
  background-color: transparent;
} 

/*---------------------------------------------------------------------*/
/*    Line configuration                                               */
/*---------------------------------------------------------------------*/
slider td {
  margin: 0;
  padding: 0;
  user-select: none;
}

slider td.line {
  border: 0;
  vertical-align: middle;
  background-color: inherit;
  user-select: none;
}

slider div.line {
  user-select: none;
  margin: 0;
  user-select: none;
}

slider div.lineleft {
  border-right: 0;
  user-select: none;
}
  
slider div.lineright {
  border-left: 0;
  user-select: none;
}

/*---------------------------------------------------------------------*/
/*    Cursor configuration                                             */
/*---------------------------------------------------------------------*/
slidercursor {
  margin: 0;
  padding: 0;
  user-select: none;
  vertical-align: middle;
  position: relative;
  display: inline-block;
}
   
slidercursor div[hssclass=hop-slider-cursor-background] {
  position: absolute;
  top: 0; bottom: 0; right: 0; left: 0;
  background-color: transparent;
  display: inline-block;
}

/*---------------------------------------------------------------------*/
/*    caption                                                          */
/*---------------------------------------------------------------------*/
slider slidercaption {
  user-select: none;
  vertical-align: bottom;
}
