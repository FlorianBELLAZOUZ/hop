;*    The module                                                       */
;*---------------------------------------------------------------------*/
(module __hopwidget-lframe

   (library hop)

   (export  (<LFRAME> . ::obj)
	    (<LFLABEL> . ::obj)))

;*---------------------------------------------------------------------*/
;*    <LFRAME> ...                                                     */
;*---------------------------------------------------------------------*/
(define-markup <LFRAME> ((attrs) body)
   (<DIV> :hssclass "hop-lframe"
      attrs
      (<DIV> :hssclass "hop-lfborder"
         (<DIV> :hssclass "hop-lfbody" body))))

;*---------------------------------------------------------------------*/
;*    <LFLABEL> ...                                                    */
;*---------------------------------------------------------------------*/
(define-markup <LFLABEL> ((attrs) body)
   (<DIV> :hssclass "hop-lflabel"
      attrs
      (<SPAN> body)))
   
